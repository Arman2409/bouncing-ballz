{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "NodeNext",
    "rootDir": "./src", 
    "outDir": "./dist",
    "esModuleInterop": true,  
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                  
    "skipLibCheck": true                             
  }
}
